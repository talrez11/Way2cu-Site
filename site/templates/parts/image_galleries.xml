<document>
		<a
		href="$params['image']"
		class="image direct"
		cms:eval="href"
		>
		<img
			src="gallery::getThumbnailById($params['id'], null, 350 ,Thumbnail::CONSTRAIN_HEIGHT)"
			alt="$params['title'][$language]"
			cms:eval="src,alt"
			/>
		<div class="desc">
		<cms:markdown param="title" multilanguage="yes"/>
		<cms:markdown param="description" multilanguage="yes"/>
		</div>
		</a>
</document>